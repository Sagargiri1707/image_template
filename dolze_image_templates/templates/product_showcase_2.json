{
  "name": "product_showcase_2",
  "description": "Modern product showcase with elegant design and improved typography",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": [250, 250, 252, 1],
      "gradient": {
        "type": "linear",
        "colors": ["#fafafc", "#f0f2f5"],
        "direction": 135
      },
      "border_radius": 0
    },
    {
      "type": "polygon",
      "position": { "x": 0, "y": 0 },
      "points": [
        [0, 0],
        [2560, 0],
        [0, 2560]
      ],
      "fill_color": "${theme_color}",
      "opacity": 0.95,
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 160 },
      "size": { "width": 1640, "height": 1350 },
      "fill_color": [255, 255, 255, 1],
      "border_radius": 40,
      "rotation_angle": -2,
      "shadow": {
        "color": [0, 0, 0, 0.12],
        "offset_x": 0,
        "offset_y": 30,
        "blur_radius": 60
      }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 460, "y": 120 },
      "size": { "width": 1640, "height": 1350 },
      "border_radius": 40,
      "rotation_angle": -2
    },
    {
      "type": "rectangle",
      "position": { "x": 1750, "y": 200 },
      "size": { "width": 300, "height": 80 },
      "fill_color": "${theme_color}",
      "border_radius": 40,
      "rotation_angle": 4,
      "shadow": {
        "color": [0, 0, 0, 0.15],
        "offset_x": 0,
        "offset_y": 10,
        "blur_radius": 20
      }
    },
    {
      "type": "text",
      "text": "${badge_text}",
      "position": { "x": 1800, "y": 215 },
      "font_family": "Outfit-Bold",
      "font_size": 44,
      "color": [255, 255, 255, 1],
      "max_width": 280,
      "align": "left",
      "rotation_angle": 4
    },

    {
      "type": "rectangle",
      "position": { "x": 0, "y": 1550 },
      "size": { "width": 2560, "height": 1010 },
      "fill_color": [255, 255, 255, 1],
      "border_radius": 60,
      "shadow": {
        "color": [0, 0, 0, 0.05],
        "offset_x": 0,
        "offset_y": -10,
        "blur_radius": 30
      }
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": { "x": 460, "y": 1600 },
      "font_family": "Outfit-Bold",
      "font_size": 110,
      "color": [17, 24, 39, 1],
      "max_width": 1800,
      "line_spacing": 1.2,
      "letter_spacing": -0.5,
      "align": "left"
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 1800 },
      "size": { "width": 160, "height": 6 },
      "fill_color": "${theme_color}",
      "border_radius": 3,
      "opacity": 0.8
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": { "x": 460, "y": 1840 },
      "font_family": "Outfit-Regular",
      "font_size": 50,
      "color": [75, 85, 99, 1],
      "max_width": 1800,
      "line_spacing": 1.5,
      "align": "left"
    },
    {
      "type": "text",
      "text": "${product_price}",
      "position": { "x": 460, "y": 2200 },
      "font_family": "Outfit-Bold",
      "font_size": 90,
      "color": [115, 115, 115, 1],
      "max_width": 800,
      "line_spacing": 1.1,
      "letter_spacing": -1,
      "align": "left"
    },
    {
      "type": "rectangle",
      "position": { "x": 460, "y": 2330 },
      "size": { "width": 420, "height": 120 },
      "fill_color": "#ffffff",
      "border_radius": 60,
      "outline_color": "${theme_color}",
      "outline_width": 5
    },
    {
      "type": "text",
      "text": "Order Now",
      "position": { "x": 525, "y": 2355 },
      "font_family": "Outfit-Medium",
      "font_size": 55,
      "color": "${theme_color}",
      "align": "center",
      "max_width": 800,
      "line_spacing": 1.1,
      "letter_spacing": 0.5
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2000, "y": 2300 },
      "size": { "width": 200, "height": 200 },
      "opacity": 0.7,
      "circle_crop": true
    }
  ]
}
