      "fill_color": [255, 255, 255, 0.1],
      "border_radius": 30,
      "outline_color": [255, 255, 255, 0.3],
      "outline_width": 2
    },
    {
      "type": "text",
      "text": "üìß NEWSLETTER",
      "position": { "x": 200, "y": 400 },
      "font_size": 60,
      "color": [255, 255, 255, 0.8],
      "font_path": "Outfit-Medium",
      "alignment": "left",
      "max_width": 2160
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": { "x": 200, "y": 500 },
