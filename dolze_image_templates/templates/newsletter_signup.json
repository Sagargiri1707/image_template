      "alignment": "left",
      "max_width": 1800
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 2000, "y": 1220 },
      "size": { "width": 200, "height": 200 },
      "circle_crop": true,
