{
  "name": "newsletter_signup",
  "description": "Encourage email newsletter subscriptions and list building",
  "size": { "width": 2560, "height": 2560 },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "image_fit": "cover"
    },
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 2560, "height": 2560 },
      "fill_color": [0, 0, 0, 0.5],
      "outline_color": null
    },
    {
      "type": "rectangle",
