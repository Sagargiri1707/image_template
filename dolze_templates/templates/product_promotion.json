{
  "name": "product_promotion",
  "description": "Split-screen payment promotion template with image on left and text on right",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 450, "height": 1080 },
      "fill_color": [255, 255, 255],
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 450, "height": 1080 },
      "opacity": 1.0,
      "tint_color": "#111111",
      "tint_opacity": 0.3
    },
    {
      "type": "rectangle",
      "position": { "x": 450, "y": 0 },
      "size": { "width": 630, "height": 1080 },
      "fill_color": [144, 238, 144],
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 80, "y": 60 },
      "size": { "width": 100, "height": 100 },
      "opacity": 0.9,
      "circle_crop": true
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": { "x": 550, "y": 150 },
      "font_size": 44,
      "color": [0, 0, 0],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 400
    },
    {
      "type": "text",
      "text": "${subheading}",
      "position": { "x": 550, "y": 290 },
      "font_size": 36,
      "color": [0, 0, 0],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 400
    },
    {
      "type": "rectangle",
      "position": { "x": 550, "y": 800 },
      "size": { "width": 320, "height": 80 },
      "fill_color": [255, 255, 255],
      "outline_color": [0, 0, 0],
      "border_radius": 40,
      "opacity": 0.9
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": { "x": 600, "y": 820 },
      "font_size": 32,
      "color": [0, 0, 0],
      "font_path": "HappyMonkey-Regular",
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 550, "y": 950 },
      "font_size": 28,
      "color": [0, 0, 0],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left"
    }
  ]
}
