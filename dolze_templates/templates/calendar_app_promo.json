{
  "name": "calendar_app_promo",
  "description": "Clean promotional template featuring a calendar app interface",
  "size": { "width": 1080, "height": 1080 },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": { "x": 80, "y": 80 },
      "font_size": 96,
      "color": [52, 64, 84, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 600
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 80, "y": 800 },
      "size": { "width": 140, "height": 140 },
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": { "x": 360, "y": 360 },
      "size": { "width": 610, "height": 1268 },
      "border_radius": 20
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": { "x": 80, "y": 960 },
      "font_size": 36,
      "color": [52, 64, 84, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 50
    }
  ]
}
